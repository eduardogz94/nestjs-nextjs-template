{
  "name": "nextjs-template",
  "version": "0.1.0",
  "license": "MIT",
  "description": "template for a next SSR application, this only includes the client side",
  "engines": {
    "node": ">=16.0.0",
    "yarn": ">=1.22.0"
  },
  "scripts": {
    "start": "next start",
    "dev": "next dev",
    "prebuild": "npx rimraf .next",
    "build": "next build",
    "lint": "next lint",
    "prettier": "prettier --write .",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o docs",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --trace-deprecation --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "clean-modules": "npx rimraf node_modules && npx rimraf package-lock.json && yarn cache clean --force && yarn install"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/react": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.4.0",
    "@types/node": "17.0.23",
    "@types/prettier": "^2.7.2",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.31.0",
    "eslint-config-next": "12.1.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-storybook": "^0.5.7",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^29.4.1",
    "postcss": "^8.4.12",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "rimraf": "^3.0.2",
    "storybook-addon-next-router": "^3.1.1",
    "storybook-css-modules-preset": "^1.1.1",
    "tailwindcss": "^3.2.0",
    "ts-jest": "^28.0.8",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "next": "^13.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "resolutions": {
    "webpack": "^5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
